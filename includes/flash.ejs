<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 flash-div" role="alert">
        <%= success %>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close">
        </button>
    </div>
<%} %>

<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 flash-div" role="alert">
        <%= error %>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close">
        </button>
    </div>
<%} %>